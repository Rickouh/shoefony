{% extends "app/layout/layout.html.twig" %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block content %}

    <!-- Carousel -->
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="{{ asset('bundles/store/slides/' ~ slides[0].link) }}" alt="{{ slides[0].alt }}">
            </div>
            {% for slide in slides[1:] %}
            <div class="item">
                <img src="{{ asset('bundles/store/slides/' ~ slide.link) }}" alt="{{ slide.alt }}">
            </div>
            {% endfor %}
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Précédent</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>
    <!-- /.carousel -->

    <hr>

    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Les nouveautés</h3>
        </div>
    </div>
    <!-- /.row -->

    <!-- Page Features -->
    {% include 'app/products.html.twig' %}
    <!-- /.row -->

    <hr>

    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Les plus populaires</h3>
        </div>
    </div>
    <!-- /.row -->

    <!-- Page Features -->
    <div class="row text-center">

        {% for product in famousProducts %}
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <img src="{{ asset('img/products/' ~ product.0.image.url) }}" alt="Nom du produit">
                <div class="caption">
                    <h3>{{ product.0.title }}</h3>
                    <p>{{ product.0.description }}</p>
                    <p>
                        <span class="badge">{{ product.0.price }} €</span> <a href="#" class="btn btn-default">Voir la fiche</a>
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>

{% endblock %}