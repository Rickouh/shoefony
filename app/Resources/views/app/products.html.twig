<div class="row text-center">

    {% for product in products %}
        <div class="col-md-{{ colMd }} col-sm-6 hero-feature">
            <div class="thumbnail">
                <img src="{{ asset('img/products/' ~ product.image.url) }}" alt="{{ product.title }}">
                <div class="caption">
                    <h3>{{ product.title|title }}</h3>
                    <p>{{ product.description }}</p>
                    <p>
                        <span class="badge">{{ product.price }} â‚¬</span>
                        <a href="{{ path('store_product', { 'id' : product.id, 'slug' : product.slug }) }}" class="btn btn-default">Voir la fiche</a>
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}

</div>